<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="8dp"
      >

    <com.android.szparag.batterygraph.screens.front.widgets.smallcharts.BatteryPercentageSmallChartWidget
        android:id="@+id/batteryPercentageSmallChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        tools:background="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toTopOf="@+id/smallChart2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.android.szparag.batterygraph.screens.front.widgets.smallcharts.BatteryPercentageSmallChartWidget
        android:id="@+id/smallChart2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        tools:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/smallChart3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/batteryPercentageSmallChart"
        />

    <com.android.szparag.batterygraph.screens.front.widgets.smallcharts.BatteryPercentageSmallChartWidget
        android:id="@+id/smallChart3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        tools:background="@android:color/holo_purple"
        app:layout_constraintBottom_toTopOf="@+id/smallChart4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallChart2"
        />

    <com.android.szparag.batterygraph.screens.front.widgets.smallcharts.BatteryPercentageSmallChartWidget
        android:id="@+id/smallChart4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        tools:background="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/smallChart5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallChart3"
        />

    <com.android.szparag.batterygraph.screens.front.widgets.smallcharts.BatteryPercentageSmallChartWidget
        android:id="@+id/smallChart5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        tools:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallChart4"
        />

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>